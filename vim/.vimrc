syntax on

filetype plugin indent on

set laststatus=2
set number
set expandtab
set tabstop=4
set shiftwidth=4
" colorscheme peachpuff
color dracula

set autoindent
set nocindent

set guifont=Monospace\ 12

set autoindent
set nocindent

" set guioptions-=T  " remove menu bar

" keybindings
"noremap \f :FSHere<CR>
"noremap \t :tabnew<CR>
"noremap \v :vs<CR>
"noremap \s :sp<CR>
"noremap \a :tabprevious<CR>
"noremap \d :tabnext<CR>
"noremap \q :q<CR>
"noremap \Q :bd<CR>
"noremap \m :set mouse=a<CR>
"noremap \M :set mouse=<CR>
"noremap \c :e %<.c<CR>
"noremap \C :e %<.cpp<CR>
"noremap \h :e %<.h<CR>
